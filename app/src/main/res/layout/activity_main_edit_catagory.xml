<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityEditCatagory">

    <TextView
        android:id="@+id/txtAdTask"
        android:layout_width="344dp"
        android:layout_height="105dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:background="#48A1A8"
        android:fontFamily="@font/roboto"
        android:text="Add Task"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBorderTop"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtAddCatagory"
        android:layout_width="344dp"
        android:layout_height="105dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="28dp"
        android:background="#48A1A8"
        android:fontFamily="@font/roboto"
        android:text="Add Catagory"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAdTask"
        app:layout_constraintVertical_bias="0.062" />

    <TextView
        android:id="@+id/txtAddMember"
        android:layout_width="344dp"
        android:layout_height="105dp"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="28dp"
        android:background="#48A1A8"
        android:fontFamily="@font/roboto"
        android:text="Add Member"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtAddCatagory"
        app:layout_constraintVertical_bias="0.08" />

    <TextView
        android:id="@+id/txtBorderTop"
        android:layout_width="411dp"
        android:layout_height="71dp"
        android:background="#F7D098"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtCAddProject"
        android:layout_width="208dp"
        android:layout_height="44dp"
        android:fontFamily="@font/roboto"
        android:text="Additional"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/btnAddNewCat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:text="Add"
        app:layout_constraintBottom_toBottomOf="@+id/txtAddCatagory"
        app:layout_constraintEnd_toEndOf="@+id/txtAddCatagory"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/txtAddCatagory"
        app:layout_constraintTop_toTopOf="@+id/txtAddCatagory"
        app:layout_constraintVertical_bias="0.771" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#009688"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>